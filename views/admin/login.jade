extends ./layout

block body
  h1 Login
  .row
    .col.s12
      form(action='/login', method='post')
        .row
          .input-field.col.s6
            input#email.validate(type='text')
            label(for='email') Email
          .input-field.col.s6
            input#password.validate(type='password')
            label(for='password') Password
        a.waves-effect.waves-light.btn(type='submit') Submit
